<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- mapper interface랑 경로를 똑같이 정함 -->
<mapper namespace="com.ssd.petMate.dao.mybatis.mapper.GpurchaseCartMapper">
  <cache />
  	<!-- 공동구매 장바구니 목록 가져오기  -->
	<select id="getGpurchaseCartList" parameterType="com.ssd.petMate.page.BoardSearch" resultType="com.ssd.petMate.domain.GpurchaseCart">
		SELECT *
		FROM GpurchaseCart
		WHERE userID = #{userID}
		ORDER BY boardNum
		LIMIT #{startList}, #{contentNum}
	</select>
	
	<!-- 공동구매 장바구니 수 -->
	<select id="getGpurchaseCartCount" resultType="int">
		SELECT COUNT(*)
		FROM GpurchaseCart
		WHERE userID = #{userID}
	</select>
	
	<!-- 공동구매 장바구니 추가하기  -->
	<insert id="insertGpurchaseCart" parameterType="com.ssd.petMate.domain.GpurchaseCart">
 		INSERT
 		INTO GpurchaseCart(boardNum, userID) VALUES(#{boardNum}, #{userID})
 	</insert>
	
	<!-- 공동구매 장바구니 삭제하기  -->
	<delete id="deleteGpurchaseCart" parameterType="com.ssd.petMate.domain.GpurchaseCart">
		DELETE
		FROM GpurchaseCart
		WHERE boardNum=#{boardNum} and userID=#{userID}

	</delete>
</mapper>